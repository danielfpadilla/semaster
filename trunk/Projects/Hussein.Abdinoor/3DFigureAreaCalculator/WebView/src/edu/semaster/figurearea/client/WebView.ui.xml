<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.panel {
			background-color: ivory;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.panel}">
		<g:AbsolutePanel height="327px" width="502px">
			<g:at left="10" top="10">
				<g:DecoratedTabPanel width="430px" height="189px">
					<g:Tab text="Cone">
						<g:VerticalPanel width="402px" height="3cm">
							<g:AbsolutePanel height="113px">
								<g:at left="26" top="10">
									<g:Label text="Radius :"/>
								</g:at>
								<g:at left="39" top="45">
									<g:Label width="48px" height="18px" text="Height:"/>
								</g:at>
								<g:at left="126" top="10">
									<g:TextBox width="156px" height="21px" ui:field="m_coneRadius"/>
								</g:at>
								<g:at left="126" top="45">
									<g:TextBox width="156px" height="21px" ui:field="m_coneHeight"/>
								</g:at>
							</g:AbsolutePanel>
						</g:VerticalPanel>
					</g:Tab>
					<g:Tab text="Cube">
						<g:VerticalPanel width="402px" height="3cm">
							<g:AbsolutePanel height="113px" >
								<g:at left="20" top="39">
									<g:Label text="Facelength:"/>
								</g:at>
								<g:at left="126" top="39">
									<g:TextBox height="16px" width="148px" ui:field="m_cubeFaceLength"/>
								</g:at>
							</g:AbsolutePanel>
						</g:VerticalPanel>
					</g:Tab>
					<g:Tab text="Cylinder">
						<g:VerticalPanel width="402px" height="3cm">
							<g:AbsolutePanel height="113px">
								<g:at left="38" top="16">
									<g:Label text="Radius :"/>
								</g:at>
								<g:at left="38" top="58">
									<g:Label height="18px" text="Height:" width="48px"/>
								</g:at>
								<g:at left="126" top="16">
									<g:TextBox height="16px" width="148px" ui:field="m_cylinderRadius"/>
								</g:at>
								<g:at left="126" top="52">
									<g:TextBox height="16px" width="148px" ui:field="m_cylinderHeight"/>
								</g:at>
							</g:AbsolutePanel>
						</g:VerticalPanel>
					</g:Tab>
					<g:Tab text="Sphere">
						<g:VerticalPanel width="402px" height="3cm">
							<g:AbsolutePanel height="113px">
								<g:at left="27" top="41">
									<g:Label text="Radius :"/>
								</g:at>
								<g:at left="125" top="41">
									<g:TextBox height="16px" width="148px" ui:field="m_sphereRadius"/>
								</g:at>
							</g:AbsolutePanel>
						</g:VerticalPanel>
					</g:Tab>
					<g:Tab text="Pyramid">
						<g:VerticalPanel width="402px" height="3cm">
							<g:AbsolutePanel height="113px">
								<g:at left="26" top="10">
									<g:Label text="Base Length :" width="132px" height="28px"/>
								</g:at>
								<g:at left="36" top="44">
									<g:Label height="18px" text="Height:" width="48px"/>
								</g:at>
								<g:at left="116" top="10">
									<g:TextBox height="20px" width="197px" ui:field="m_pramidLength"/>
								</g:at>
								<g:at left="116" top="44">
									<g:TextBox height="20px" width="197px" ui:field="m_pyramidHeight"/>
								</g:at>
							</g:AbsolutePanel>
						</g:VerticalPanel>
					</g:Tab>
					<g:Tab text="Torus">
						<g:VerticalPanel width="402px" height="129px">
							<g:AbsolutePanel height="144px">
								<g:at left="20" top="10">
									<g:Label text="Minor radius :" width="132px" height="27px"/>
								</g:at>
								<g:at left="20" top="43">
									<g:Label height="26px" text="Major radius:" width="95px"/>
								</g:at>
								<g:at left="148" top="10">
									<g:TextBox height="19px" width="167px" ui:field="m_torusMajorRadius"/>
								</g:at>
								<g:at left="148" top="43">
									<g:TextBox height="19px" width="167px" ui:field="m_torusMinorRadius"/>
								</g:at>
							</g:AbsolutePanel>
						</g:VerticalPanel>
					</g:Tab>
				</g:DecoratedTabPanel>
			</g:at>
			<g:at left="10" top="277">
				<g:Button width="150px" height="28px" text="Calculate Area" ui:field="m_calculateAreaButton"/>
			</g:at>
			<g:at left="180" top="281">
				<g:TextBox width="231px" height="28px" readOnly="true" ui:field="m_areaResult"/>
			</g:at>
			<g:at left="24" top="245">
				<g:Image url="home.gif"/>
			</g:at>
			<g:at left="116" top="245">
				<g:Label text="error message" width="199px" height="16px"/>
			</g:at>
		</g:AbsolutePanel>
	</g:FlowPanel>
</ui:UiBinder>
