<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.panel {
			background-color: ivory;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.panel}">
		<g:AbsolutePanel height="354px" width="502px">
			<g:at left="10" top="244">
				<g:Button width="150px" height="28px" text="Calculate Area" ui:field="m_calculateAreaButton"/>
			</g:at>
			<g:at left="182" top="244">
				<g:TextBox width="231px" height="20px" readOnly="true" ui:field="m_areaResult"/>
			</g:at>
			<g:at left="25" top="198">
				<g:Image ui:field="m_errorImage" url="images.jpg" width="36px" height="33px"/>
			</g:at>
			<g:at left="82" top="208">
				<g:Label text="Input parameters" width="339px" height="16px" ui:field="m_labelErrorMessage"/>
			</g:at>
			<g:at left="32" top="21">
				<g:TabLayoutPanel barHeight="2" barUnit="EM" width="394px" height="171px" ui:field="m_selectedTab">
					<g:tab>
						<g:header>Cone</g:header>
						<g:VerticalPanel width="396px">
							<g:AbsolutePanel height="113px">
								<g:at left="26" top="10">
									<g:Label text="Radius :"/>
								</g:at>
								<g:at left="39" top="45">
									<g:Label width="48px" height="18px" text="Height:"/>
								</g:at>
								<g:at left="126" top="10">
									<g:TextBox width="156px" height="21px" ui:field="m_coneRadius"/>
								</g:at>
								<g:at left="126" top="45">
									<g:TextBox width="156px" height="21px" ui:field="m_coneHeight"/>
								</g:at>
							</g:AbsolutePanel>
						</g:VerticalPanel>
					</g:tab>
					<g:tab>
						<g:header>Cube</g:header>
						<g:VerticalPanel width="389px">
							<g:AbsolutePanel height="113px" >
								<g:at left="20" top="39">
									<g:Label text="Facelength:"/>
								</g:at>
								<g:at left="126" top="39">
									<g:TextBox height="16px" width="148px" ui:field="m_cubeFaceLength"/>
								</g:at>
							</g:AbsolutePanel>
						</g:VerticalPanel>
					</g:tab>
					<g:tab>
						<g:header>Cylinder</g:header>
						<g:VerticalPanel>
							<g:AbsolutePanel height="113px" width="386px">
								<g:at left="38" top="16">
									<g:Label text="Radius :"/>
								</g:at>
								<g:at left="38" top="58">
									<g:Label height="18px" text="Height:" width="48px"/>
								</g:at>
								<g:at left="126" top="16">
									<g:TextBox height="16px" width="148px" ui:field="m_cylinderRadius"/>
								</g:at>
								<g:at left="126" top="52">
									<g:TextBox height="16px" width="148px" ui:field="m_cylinderHeight"/>
								</g:at>
							</g:AbsolutePanel>
						</g:VerticalPanel>
					</g:tab>
					<g:tab>
						<g:header>Sphere</g:header>
						<g:VerticalPanel>
							<g:AbsolutePanel height="113px" width="385px">
								<g:at left="27" top="41">
									<g:Label text="Radius :"/>
								</g:at>
								<g:at left="125" top="41">
									<g:TextBox height="16px" width="148px" ui:field="m_sphereRadius"/>
								</g:at>
							</g:AbsolutePanel>
						</g:VerticalPanel>
					</g:tab>
					<g:tab>
						<g:header>Pyramid</g:header>
						<g:VerticalPanel width="389px">
							<g:AbsolutePanel height="113px">
								<g:at left="26" top="10">
									<g:Label text="Base Length :" width="132px" height="28px"/>
								</g:at>
								<g:at left="36" top="44">
									<g:Label height="18px" text="Height:" width="48px"/>
								</g:at>
								<g:at left="116" top="10">
									<g:TextBox height="20px" width="197px" ui:field="m_pyramidLength"/>
								</g:at>
								<g:at left="116" top="44">
									<g:TextBox height="20px" width="197px" ui:field="m_pyramidHeight"/>
								</g:at>
							</g:AbsolutePanel>
						</g:VerticalPanel>
					</g:tab>
					<g:tab>
						<g:header>Torus</g:header>
						<g:VerticalPanel width="394px">
							<g:AbsolutePanel height="144px">
								<g:at left="22" top="43">
									<g:Label text="Minor radius :" width="132px" height="27px"/>
								</g:at>
								<g:at left="22" top="11">
									<g:Label height="26px" text="Major radius:" width="95px"/>
								</g:at>
								<g:at left="148" top="10">
									<g:TextBox height="19px" width="167px" ui:field="m_torusMajorRadius"/>
								</g:at>
								<g:at left="148" top="43">
									<g:TextBox height="19px" width="167px" ui:field="m_torusMinorRadius"/>
								</g:at>
							</g:AbsolutePanel>
						</g:VerticalPanel>
					</g:tab>
				</g:TabLayoutPanel>
			</g:at>
		</g:AbsolutePanel>
	</g:FlowPanel>
</ui:UiBinder>
