<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.panel {
			background-color: ivory;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.panel}">
		<g:VerticalPanel spacing="5">
			<g:HorizontalPanel spacing="5">
				<g:Cell verticalAlignment="ALIGN_MIDDLE">
					<g:Label text="Number 1:"/>
				</g:Cell>
				<g:TextBox ui:field="m_real1"/>
				<g:Cell verticalAlignment="ALIGN_MIDDLE">
					<g:Label text="+"/>
				</g:Cell>
				<g:TextBox ui:field="m_imaginary1"/>
				<g:Cell verticalAlignment="ALIGN_MIDDLE">
					<g:Label text="i"/>
				</g:Cell>
			</g:HorizontalPanel>
			<g:HorizontalPanel spacing="5">
				<g:Cell verticalAlignment="ALIGN_MIDDLE">
					<g:Label text="Number 2:"/>
				</g:Cell>
				<g:TextBox ui:field="m_real2"/>
				<g:Cell verticalAlignment="ALIGN_MIDDLE">
					<g:Label text="+"/>
				</g:Cell>
				<g:TextBox ui:field="m_imaginary2"/>
				<g:Cell verticalAlignment="ALIGN_MIDDLE">
					<g:Label text="i"/>
				</g:Cell>
			</g:HorizontalPanel>
			<g:HorizontalPanel borderWidth="0" spacing="5">
				<g:Button text="Add" ui:field="m_addButton"/>
				<g:Button text="Multiply" ui:field="m_multiplyButton"/>
			</g:HorizontalPanel>
			<g:HorizontalPanel spacing="5">
				<g:Cell verticalAlignment="ALIGN_MIDDLE">
					<g:Label text="Result:"/>
				</g:Cell>
				<g:TextBox readOnly="true" width="353px" ui:field="m_result"/>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:FlowPanel>
</ui:UiBinder>
