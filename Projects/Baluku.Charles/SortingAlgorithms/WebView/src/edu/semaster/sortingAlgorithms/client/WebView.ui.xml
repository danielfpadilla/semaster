<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.panel {
			background-color: ivory;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.panel}">
		<g:AbsolutePanel width="429px" height="284px" ui:field="m_binder">
			<g:at left="20" top="23">
				<g:Label text="Enter Array Size" ui:field="m_enterArraySize"/>
			</g:at>
			<g:at left="133" top="15">
				<g:TextBox ui:field="m_arraySize" text="Array Size"/>
			</g:at>
			<g:at left="16" top="71">
				<g:Button width="100px" height="28px" text="Generate Array" ui:field="m_generateArray"/>
			</g:at>
			<g:at left="133" top="75">
				<g:TextBox ui:field="m_randomlyGeneratedArray" text="Randomly Generated Array"/>
			</g:at>
			<g:at left="32" top="130">
				<g:RadioButton name="new name" text="Merge Sort" ui:field="m_mergeSort"/>
			</g:at>
			<g:at left="206" top="130">
				<g:RadioButton name="new name" text="Quick Sort" ui:field="m_quickSort"/>
			</g:at>
			<g:at left="20" top="185">
				<g:Button width="100px" height="28px" text="Sort Array" ui:field="m_sortArray"/>
			</g:at>
			<g:at left="133" top="189">
				<g:TextBox ui:field="m_sortedArray" text="Sorted Array"/>
			</g:at>
		</g:AbsolutePanel>
	</g:FlowPanel>
</ui:UiBinder>
