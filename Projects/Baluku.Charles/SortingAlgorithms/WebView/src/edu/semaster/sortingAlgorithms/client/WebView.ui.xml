<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.panel {
			background-color: ivory;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.panel}">
		<g:RadioButton name="m_mergeSort" text="Merge Sort" ui:field="radioButton"/>
		<g:TextBox width="222px" name="m_randomlyGeneratedArray" text="Randomly Generated Array" ui:field="textBox"/>
		<g:RadioButton name="m_quickSort" text="Quick Sort" ui:field="radioButton_1"/>
		<g:Button width="166px" ui:field="button">Randomly Generate Array </g:Button>
		<g:Label text="Sorted Array" width="120px" height="24px"/>
		<g:TextBox text="Array Size&#13;&#10;" name="m_arraySize" ui:field="textBox_1"/>
		<g:Button text="Enter Array Size" ui:field="button_1"/>
		<g:TextBox name="m_sortedArray" width="248px" text="Sorted Array" ui:field="textBox_2"/>
	</g:FlowPanel>
</ui:UiBinder>
